- if current_page > 1
  =link_to "&lsaquo; First", "/#{link}/1"

- if previous_page
  =link_to "&laquo;", "/#{link}/#{previous_page}"

- (1..total_pages).each do |page|
  - if page == current_page
    = page
  - else
    =link_to page, "/#{link}/#{page}"

- if next_page
  =link_to '&raquo;', "/#{link}/#{next_page}"

- if last_page
  =link_to 'Last &rsaquo;', "/#{link}/#{last_page}"
